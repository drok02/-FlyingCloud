{
                                
    "stack_name": "VE",
    "template": {
        "heat_template_version": "2018-08-31",
        "description": "This template demonstrates the different ways configuration resources can be used to specify boot-time cloud-init configuration.",
        "parameters":{
            "flavor": {
                "default": "m1.tiny",
                "type": "string"
            },
            "packages":{
                "default" :["vim"],
                "type" : "comma_delimited_list"
            },
            "image":{
                "default": "ubuntu",
                "type":"string"
            },
            "volumesize":{
                "default": "3",
                "type":"string"
            }
        },
        "resources": {
            "mybox": {
                "type": "OS::Nova::Server",
                "properties": {
                "name": "VM_of_Orchestration_test",
                "flavor": {"get_param":"flavor"},
                "image": {"get_param":"image"},
                "key_name": {
                    "get_resource": "demo_key"
                },
                "networks": [
                    {
                    "port": {
                        "get_resource": "mybox_management_port"
                    }
                    }
                ],
                "user_data": {
                    "get_resource": "myconfig"
                },
                "user_data_format": "RAW",
                "block_device_mapping": [
                    {
                        "device_name": "voltest",
                        "volume_id":{
                            "get_resource": "myvolume"
                        }
                    }
                ]
                }
            },
            "myconfig": {
                "type": "OS::Heat::CloudConfig",
                "properties": {
                    "cloud_config": {
                        "packages": {"get_param" : "packages"}
                    }
                }
            },
            "myvolume":{
                "type": "OS::Cinder::Volume",
                "properties": {
                    "name": "testvolume",
                    "size":"3"
                }
            },
            "demo_key": {
                "type": "OS::Nova::KeyPair",
                "properties": {
                "name": "testkey0829"
                }
            },
            "mybox_management_port": {
                "type": "OS::Neutron::Port",
                "properties": {
                "network_id": "14c2fac4-58c5-4dec-94fd-5b7f2f3498e5"
                }
            }
            
        }
    },

    "parameters":{
        "flavor" : "ds512M",
        "packages" : ["vim", "pwgen"],
        "image" : "ubuntu",
        "volumesize" : "5"
    }
    
}